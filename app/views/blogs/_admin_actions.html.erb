<% if logged_in?(:site_admin) %>
  <nav class="breadcrumb blogcrumb bg-actions">
    <%= link_to fa_icon('file-text'), toggle_status_blog_path(blog), style: blog_status_color(blog), class:"text-dark" %> 
    <%= link_to fa_icon('pencil-square-o'), edit_blog_path(blog), class:"text-dark" %>
    <%= link_to fa_icon('trash'), blog, method: :delete, data: { confirm: 'Are you sure?' }, class:"text-dark" %>
  </nav>
<% end %>