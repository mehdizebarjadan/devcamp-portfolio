<nav class="breadcrumb bg-actions">
  <%= link_to "Topics", topics_path, class: 'breadcrumb-item text-info' %>
  <%= link_to @blog.topic.title, topic_path(@blog.topic), class: 'breadcrumb-item text-info' %>
  
  <span class="breadcrumb-item active"><%= @blog.title %></span>

  <span class="ml-auto">
    <%= link_to fa_icon('pencil-square-o'), edit_blog_path(@blog), class: 'text-dark' if logged_in?(:site_admin) %>
    <%= link_to fa_icon('trash'), @blog, method: :delete, data: { confirm: 'Are you sure you want to delete this post' }, class: 'text-dark' if logged_in?(:site_admin) %>
  </span>
</nav>