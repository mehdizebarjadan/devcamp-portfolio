<div class="container">
  <header class="blog-header py-3">
    <div class="row flex-nowrap justify-content-between align-items-center">
      <div class="col-4 pt-1">
        <span>
          <%= link_to 'Write a New Blog', new_blog_path , class: "topic font-weight-bold" if logged_in?(:site_admin) %>
        </span>
        
      </div>
      <div class="col-4 text-center">
        <%= link_to 'Design & Code', blogs_path, class: 'blog-header-logo text-dark'%>
      </div>
      <div class="col-4 d-flex justify-content-end align-items-center">
      </div>
    </div>
  </header>

  <div class="nav-scroller py-3 mb-2">
    <nav class="nav d-flex justify-content-between">
      <%= nav_helper 'p-2 text-muted', 'div'%>
      <div><%= login_helper "p-2 text-muted" %></div>
    </nav>
  </div>
</div>